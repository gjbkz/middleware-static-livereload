{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"outDir": "esm",
		"noEmit": false,
		"emitDeclarationOnly": true,
		"allowImportingTsExtensions": false,
		"rewriteRelativeImportExtensions": true
	},
	"include": ["./src/**/*.ts"],
	"exclude": ["**/*.test.*"]
}
