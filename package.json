{
    "name": "middleware-static-livereload",
    "version": "0.0.5",
    "description": "A middleware for connect and livereload",
    "license": "MIT",
    "author": {
        "name": "Kei Ito",
        "email": "kei.itof@gmail.com",
        "url": "https://github.com/kei-ito"
    },
    "engines": {
        "node": ">=6"
    },
    "repository": "kei-ito/middleware-static-livereload",
    "main": "src/index.js",
    "scripts": {
        "lint:ts": "eslint --ext .ts src",
        "lint:js": "eslint src",
        "lint": "run-p lint:*",
        "build:tsc": "tsc",
        "build:client": "cpy src/client-script.js lib",
        "build": "run-s build:tsc build:client",
        "test": "ava -v",
        "version:changelog": "conventional-changelog --preset angular --infile CHANGELOG.md --same-file --release-count 0",
        "version:add": "git add .",
        "version": "run-s version:changelog version:add"
    },
    "dependencies": {
        "chokidar": "^3.0.1"
    },
    "devDependencies": {
        "@commitlint/cli": "^8.0.0",
        "@commitlint/config-conventional": "^8.0.0",
        "@nlib/lint": "^3.10.0",
        "@types/connect": "^3.4.32",
        "@types/node": "^12.0.7",
        "@types/selenium-webdriver": "^4.0.0",
        "@typescript-eslint/eslint-plugin": "^1.10.2",
        "@typescript-eslint/parser": "^1.10.2",
        "ava": "^2.0.0",
        "browserstack-local": "^1.4.0",
        "connect": "^3.7.0",
        "conventional-changelog-cli": "^2.0.21",
        "cpy-cli": "^2.0.0",
        "eslint": "^5.16.0",
        "event-source-polyfill": "^1.0.5",
        "husky": "^2.4.0",
        "lint-staged": "^8.2.0",
        "npm-run-all": "^4.1.5",
        "selenium-webdriver": "^4.0.0-alpha.1",
        "ts-node": "^8.2.0",
        "typescript": "^3.5.1"
    },
    "eslintConfig": {
        "extends": "./node_modules/@nlib/lint/.eslintrc.json",
        "env": {
            "es6": true,
            "node": true
        },
        "globals": {
            "URL": false
        },
        "overrides": [
            {
                "files": [
                    "src/client-script.js"
                ],
                "env": {
                    "es6": false,
                    "browser": true,
                    "node": false
                },
                "rules": {
                    "prefer-arrow-callback": "off",
                    "prefer-destructuring": "off",
                    "prefer-template": "off",
                    "func-style": [
                        "error",
                        "declaration"
                    ],
                    "no-restricted-syntax": [
                        "error",
                        "TemplateElement",
                        "ArrayPattern",
                        "ObjectPattern",
                        "ArrowFunctionExpression"
                    ]
                }
            },
            {
                "files": [
                    "src/types.ts",
                    "src/stringify.ts",
                    "src/createWriter.ts"
                ],
                "rules": {
                    "@typescript-eslint/no-explicit-any": "off"
                }
            }
        ]
    },
    "ava": {
        "compileEnhancements": false,
        "extensions": [
            "ts"
        ],
        "require": [
            "ts-node/register"
        ],
        "files": [
            "lib/**/*.test.js"
        ]
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.js": [
            "eslint"
        ]
    },
    "renovate": {
        "extends": [
            ":ignoreModulesAndTests",
            ":unpublishSafe",
            ":semanticPrefixChore",
            ":prNotPending",
            ":prConcurrentLimit10",
            ":prHourlyLimitNone",
            ":label(dependencies)",
            ":automergeMinor"
        ]
    }
}
