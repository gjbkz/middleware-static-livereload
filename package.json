{
    "name": "middleware-static-livereload",
    "version": "1.2.5",
    "description": "A middleware for connect and livereload",
    "license": "Apache-2.0",
    "author": {
        "name": "Kei Ito",
        "email": "kei.itof@gmail.com",
        "url": "https://github.com/kei-ito"
    },
    "engines": {
        "node": ">=6"
    },
    "repository": "kei-ito/middleware-static-livereload",
    "main": "lib/index.js",
    "scripts": {
        "lint:ts": "eslint --ext .ts src",
        "lint:js": "eslint src",
        "lint": "run-p lint:*",
        "build:tsc": "tsc",
        "build:client": "cpy src/client-script.js lib",
        "build": "run-s build:tsc build:client",
        "test": "ava",
        "test-client": "ava test/run.ts",
        "version:changelog": "conventional-changelog --preset angular --infile CHANGELOG.md --same-file --release-count 0",
        "version:add": "git add .",
        "version": "run-s version:changelog version:add"
    },
    "dependencies": {
        "chokidar": "^3.0.2",
        "event-source-polyfill": "1.0.8"
    },
    "devDependencies": {
        "@commitlint/cli": "8.1.0",
        "@commitlint/config-conventional": "8.1.0",
        "@nlib/lint": "^3.13.2",
        "@types/connect": "3.4.32",
        "@types/node": "12.7.2",
        "@types/selenium-webdriver": "4.0.1",
        "@typescript-eslint/eslint-plugin": "^1.13.0",
        "@typescript-eslint/parser": "^1.13.0",
        "ava": "2.2.0",
        "browserstack-local": "1.4.2",
        "connect": "3.7.0",
        "conventional-changelog-cli": "2.0.23",
        "cpy-cli": "2.0.0",
        "eslint": "^6.1.0",
        "husky": "3.0.3",
        "lint-staged": "9.2.1",
        "npm-run-all": "4.1.5",
        "selenium-webdriver": "4.0.0-alpha.4",
        "ts-node": "8.3.0",
        "typescript": "3.5.3"
    },
    "eslintConfig": {
        "extends": "./node_modules/@nlib/lint/.eslintrc.json",
        "env": {
            "es6": true,
            "node": true
        },
        "globals": {
            "URL": false
        },
        "overrides": [
            {
                "files": [
                    "*.test.ts"
                ],
                "rules": {
                    "max-lines-per-function": "off"
                }
            },
            {
                "files": [
                    "src/client-script.js",
                    "test/*/{src,test-*}/**/*.js"
                ],
                "env": {
                    "es6": false,
                    "browser": true,
                    "node": false
                },
                "rules": {
                    "max-lines-per-function": "off",
                    "prefer-arrow-callback": "off",
                    "prefer-destructuring": "off",
                    "prefer-template": "off",
                    "func-style": [
                        "error",
                        "declaration"
                    ],
                    "no-restricted-syntax": [
                        "error",
                        "TemplateElement",
                        "ArrayPattern",
                        "ObjectPattern",
                        "ArrowFunctionExpression"
                    ]
                }
            },
            {
                "files": [
                    "src/types.ts",
                    "src/stringify.ts",
                    "src/createWriter.ts"
                ],
                "rules": {
                    "@typescript-eslint/no-explicit-any": "off"
                }
            },
            {
                "files": [
                    "src/listen.ts"
                ],
                "rules": {
                    "no-process-env": "off"
                }
            },
            {
                "files": [
                    "test/**/*.ts"
                ],
                "rules": {
                    "max-lines-per-function": "off",
                    "no-process-env": "off",
                    "@typescript-eslint/no-triple-slash-reference": "off"
                }
            }
        ]
    },
    "ava": {
        "compileEnhancements": false,
        "extensions": [
            "ts"
        ],
        "require": [
            "ts-node/register"
        ],
        "files": [
            "lib/**/*.test.js"
        ]
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.ts": [
            "eslint"
        ],
        "*.js": [
            "eslint"
        ]
    },
    "renovate": {
        "extends": [
            ":ignoreModulesAndTests",
            ":unpublishSafe",
            ":semanticPrefixChore",
            ":prNotPending",
            ":prConcurrentLimit10",
            ":prHourlyLimitNone",
            ":label(dependencies)",
            ":automergeMinor"
        ]
    }
}
