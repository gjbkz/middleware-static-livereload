{
	"name": "middleware-static-livereload",
	"version": "1.3.0",
	"description": "A middleware for connect and livereload",
	"license": "Apache-2.0",
	"author": {
		"name": "Kei Ito",
		"email": "kei.itof@gmail.com",
		"url": "https://gojabako.zone"
	},
	"engines": {
		"node": ">=14"
	},
	"repository": "gjbkz/middleware-static-livereload",
	"type": "module",
	"main": "./esm/middleware.js",
	"exports": {
		"import": "./esm/middleware.js",
		"require": "./cjs/middleware.js"
	},
	"files": [
		"cjs",
		"esm",
		"!**/*.test.*"
	],
	"scripts": {
		"lint": "eslint src",
		"build": "run-s build:*",
		"build:clientScript": "node buildClientScript.mjs",
		"build:esm": "tsc --project tsconfig.esm.json",
		"build:cjs": "tsc --project tsconfig.cjs.json",
		"test": "run-s build:clientScript test:*",
		"test:node": "node --import=@nlib/tsm/register.mjs --test src/*.test.ts",
		"test-client": "node client.test.mjs",
		"version": "run-s version:*",
		"version:changelog": "npx @nlib/changelog --output CHANGELOG.md",
		"version:add": "git add ."
	},
	"dependencies": {
		"chokidar": "4.0.3"
	},
	"devDependencies": {
		"@biomejs/biome": "2.2.4",
		"@nlib/tsm": "1.1.0",
		"@types/connect": "3.4.38",
		"@types/jsdom": "21.1.7",
		"@types/node": "24.4.0",
		"@types/node-fetch": "2.6.13",
		"@types/selenium-webdriver": "4.1.28",
		"browserstack-local": "1.5.8",
		"connect": "3.7.0",
		"esbuild": "0.25.9",
		"jsdom": "27.0.0",
		"npm-run-all": "4.1.5",
		"selenium-webdriver": "4.35.0",
		"typescript": "5.9.2"
	},
	"renovate": {
		"extends": [
			"github>nlibjs/renovate-config"
		]
	}
}
