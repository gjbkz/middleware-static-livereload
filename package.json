{
    "name": "middleware-static-livereload",
    "version": "1.2.9",
    "description": "A middleware for connect and livereload",
    "license": "Apache-2.0",
    "author": {
        "name": "Kei Ito",
        "email": "kei.itof@gmail.com",
        "url": "https://github.com/kei-ito"
    },
    "engines": {
        "node": ">=6"
    },
    "repository": "kei-ito/middleware-static-livereload",
    "main": "lib/index.js",
    "files": [
        "lib"
    ],
    "scripts": {
        "cleanup": "rimraf lib",
        "lint:ts": "eslint --ignore-pattern sample-project --ext .ts src test",
        "lint:js": "eslint --ignore-pattern sample-project src",
        "lint": "run-p lint:*",
        "build:tsc": "tsc",
        "build:client": "cpy src/client-script.js lib",
        "build": "run-s cleanup build:tsc build:client",
        "prepack": "rimraf lib/**/*.test.js lib/**/*.test.d.ts lib/test-util",
        "test:ava": "ava",
        "test:tsc": "tsc --noEmit",
        "test": "run-p test:*",
        "test-client": "ava test/run.ts",
        "version:changelog": "conventional-changelog --preset angular --infile CHANGELOG.md --same-file --release-count 0",
        "version:add": "git add .",
        "version": "run-s version:changelog version:add"
    },
    "dependencies": {
        "chokidar": "^3.3.0",
        "event-source-polyfill": "^1.0.11"
    },
    "devDependencies": {
        "@commitlint/cli": "8.2.0",
        "@commitlint/config-conventional": "8.2.0",
        "@nlib/lint": "^3.15.0",
        "@types/connect": "3.4.32",
        "@types/node": "^12.12.14",
        "@types/selenium-webdriver": "4.0.5",
        "@typescript-eslint/eslint-plugin": "^2.10.0",
        "@typescript-eslint/parser": "^2.10.0",
        "ava": "^2.4.0",
        "browserstack-local": "1.4.2",
        "connect": "3.7.0",
        "conventional-changelog-cli": "^2.0.28",
        "cpy-cli": "^3.0.0",
        "eslint": "^6.7.2",
        "husky": "^3.1.0",
        "lint-staged": "^9.5.0",
        "npm-run-all": "4.1.5",
        "rimraf": "^3.0.0",
        "selenium-webdriver": "4.0.0-alpha.5",
        "ts-node": "^8.5.4",
        "typescript": "^3.7.3"
    },
    "eslintConfig": {
        "extends": "./node_modules/@nlib/lint/.eslintrc.json",
        "env": {
            "es6": true,
            "node": true
        },
        "globals": {
            "URL": false
        },
        "overrides": [
            {
                "files": [
                    "*.test.ts"
                ],
                "rules": {
                    "max-lines-per-function": "off"
                }
            },
            {
                "files": [
                    "test/**"
                ],
                "parserOptions": {
                    "project": "tsconfig.base.json"
                },
                "rules": {
                    "max-lines-per-function": "off",
                    "no-process-env": "off",
                    "@typescript-eslint/no-triple-slash-reference": "off"
                }
            },
            {
                "files": [
                    "src/client-script.js",
                    "test/*/{src,test-*}/**/*.js"
                ],
                "env": {
                    "es6": false,
                    "browser": true,
                    "node": false
                },
                "rules": {
                    "max-lines-per-function": "off",
                    "prefer-arrow-callback": "off",
                    "prefer-destructuring": "off",
                    "prefer-template": "off",
                    "func-style": [
                        "error",
                        "declaration"
                    ],
                    "no-restricted-syntax": [
                        "error",
                        "TemplateElement",
                        "ArrayPattern",
                        "ObjectPattern",
                        "ArrowFunctionExpression"
                    ]
                }
            },
            {
                "files": [
                    "src/types.ts",
                    "src/stringify.ts",
                    "src/createWriter.ts",
                    "src/test-util/createLogger.ts"
                ],
                "rules": {
                    "@typescript-eslint/no-explicit-any": "off"
                }
            },
            {
                "files": [
                    "src/middleware.ts"
                ],
                "rules": {
                    "@typescript-eslint/no-floating-promises": "off"
                }
            },
            {
                "files": [
                    "test/run.ts"
                ],
                "rules": {
                    "require-atomic-updates": "off"
                }
            },
            {
                "files": [
                    "test/util/createBrowserStackLocal.ts"
                ],
                "rules": {
                    "@typescript-eslint/no-unnecessary-condition": "off"
                }
            }
        ]
    },
    "ava": {
        "compileEnhancements": false,
        "extensions": [
            "ts"
        ],
        "require": [
            "ts-node/register"
        ],
        "files": [
            "lib/**/*.test.js"
        ]
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.ts": [
            "eslint"
        ],
        "*.js": [
            "eslint"
        ]
    },
    "renovate": {
        "extends": [
            ":ignoreModulesAndTests",
            ":unpublishSafe",
            ":semanticPrefixChore",
            ":prNotPending",
            ":prConcurrentLimit10",
            ":prHourlyLimitNone",
            ":label(dependencies)",
            ":automergeMinor"
        ]
    }
}
