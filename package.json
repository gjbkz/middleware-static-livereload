{
    "name": "middleware-static-livereload",
    "version": "1.2.21",
    "description": "A middleware for connect and livereload",
    "license": "Apache-2.0",
    "author": {
        "name": "Kei Ito",
        "email": "kei.itof@gmail.com",
        "url": "https://github.com/kei-ito"
    },
    "engines": {
        "node": ">=14"
    },
    "repository": "kei-ito/middleware-static-livereload",
    "type": "module",
    "main": "lib/index.mjs",
    "files": [
        "lib",
        "!lib/test-util",
        "!*.test.*",
        "!*.map"
    ],
    "scripts": {
        "cleanup": "rimraf lib",
        "lint": "run-s lint:*",
        "lint:ts": "eslint --ignore-pattern sample-project --ext .ts src test",
        "lint:js": "eslint --ignore-pattern sample-project src",
        "build": "run-s cleanup build:*",
        "build:tsc": "tsc --project tsconfig.build.json",
        "build:esmify": "esmify \"lib/**\"",
        "build:client": "node lib/copy.mjs src/client-script.js lib/client-script.js",
        "test": "ava",
        "test-client": "ava --config ava.config.client.js",
        "version": "run-s version:changelog version:add",
        "version:changelog": "npx @nlib/changelog --output CHANGELOG.md",
        "version:add": "git add ."
    },
    "dependencies": {
        "chokidar": "3.5.3"
    },
    "devDependencies": {
        "@nlib/eslint-config": "3.18.0",
        "@nlib/esmify": "0.1.2",
        "@nlib/githooks": "0.1.0",
        "@nlib/lint-commit": "0.1.8",
        "@types/connect": "3.4.35",
        "@types/node": "17.0.36",
        "@types/node-fetch": "2.6.1",
        "@types/selenium-webdriver": "4.1.1",
        "@typescript-eslint/eslint-plugin": "5.26.0",
        "@typescript-eslint/parser": "5.26.0",
        "abort-controller": "3.0.0",
        "ava": "4.3.0",
        "browserstack-local": "1.5.1",
        "connect": "3.7.0",
        "eslint": "8.16.0",
        "lint-staged": "12.5.0",
        "node-fetch": "3.2.5",
        "npm-run-all": "4.1.5",
        "rimraf": "3.0.2",
        "selenium-webdriver": "4.2.0",
        "ts-node": "10.8.1",
        "typescript": "4.7.2"
    },
    "eslintConfig": {
        "ignorePatterns": [
            "test/src",
            "test/test-*",
            "lib/**"
        ],
        "extends": [
            "@nlib/eslint-config"
        ],
        "env": {
            "es6": true,
            "node": true
        },
        "rules": {
            "@nlib/no-globals": "off",
            "@typescript-eslint/no-redeclare": "off"
        }
    },
    "lint-staged": {
        "*.{ts,tsx,js,mjs,cjs,jsx}": [
            "eslint"
        ]
    },
    "renovate": {
        "extends": [
            "github>nlibjs/renovate-config"
        ]
    }
}
